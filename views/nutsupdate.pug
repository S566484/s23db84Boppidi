extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to update
  else
    - let actionid=""
    - let Nutsid = toShow._id
    - let name = toShow.name
    - let cost = toShow.cost
    - let size= toShow.size
    div.row(class='mb-2')
      div.mr-1 ID is
      div #{Nutsid}
    - actionid = "/resource/Nuts/" + Nutsid
    - console.log(actionid+" "+Nutsid)
    form(id='NutsForm', action= actionid, method="PUT")
      div.form-group
        label.NutsAttr(for='name') Nuts name
        input#name(type='text', name='name', value= name )
      div.form-group
        label.NutsAttr(for='cost') Nuts cost
        input#cost(type='number', name='cost', value= cost )
      div.form-group
        label.NutsAttr(for='size') Nuts size
        input#size(type='text', name='size', value= size )
      input(type="submit")
    script.
      document.forms['NutsForm'].addEventListener('submit', (event) => {
        event.preventDefault();
        // TODO do something here to show user that form is being submitted
        fetch(event.target.action, {
          method: 'PUT',
          body: new URLSearchParams(new FormData(event.target)) // event.target is the form
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Update succeded")
        // TODO handle body
        }).catch((error) => {
        // TODO handle error
          console.log(actionid)
          alert(actionid)
        });
      });