extends layout

block content
  h1= title
  - let result = results
  div.container-fluid
    div.row
      each nuts ,index in result
       div.col-sm-2(onclick=`buy(${index})`) #{nuts.name}
       div.col-sm-2(onclick=`buy(${index})`) #{nuts.cost}
       div.col-sm-2(onclick=`buy(${index})`) #{nuts.size}
       br
       hr

  script. 
      function buy(index)
      {
        alert(`you purchased Item ${index+1}`)
      }